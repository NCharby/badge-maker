# ========================================
# Badge Maker Environment Configuration
# ========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ========================================
# Supabase Configuration (Required)
# ========================================
# Your Supabase project URL and keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Application Configuration (Required)
# ========================================
# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Application name displayed in emails and UI
NEXT_PUBLIC_APP_NAME=Badge Maker

# ========================================
# File Upload Configuration (Required)
# ========================================
# Maximum file size in bytes (5MB default)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
# Allowed file types for image uploads
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ========================================
# Storage Configuration (Required)
# ========================================
# Supabase storage bucket names
NEXT_PUBLIC_STORAGE_BUCKET_BADGE_IMAGES=badge-images
NEXT_PUBLIC_STORAGE_BUCKET_WAIVER_DOCUMENTS=waiver-documents

# ========================================
# Waiver Configuration (Required)
# ========================================
# Current version of the waiver document
WAIVER_VERSION=1.0.0

# ========================================
# Security & Access Control (Required)
# ========================================
# How long PDF access links remain valid (in hours)
PDF_ACCESS_EXPIRY_HOURS=24

# ========================================
# Email Service Configuration (Required)
# ========================================
# Postmark API key for sending emails
POSTMARK_API_KEY=your_postmark_api_key
# Default sender email address
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
# Postmark template ID for badge confirmation emails (numeric ID from Postmark)
POSTMARK_TEMPLATE_ID=123456

# ========================================
# Analytics & Monitoring (Optional)
# ========================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_ID=your_google_analytics_id
# Sentry error tracking DSN
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ========================================
# Telegram Bot Configuration (Optional)
# ========================================
# Telegram Bot API token for private group invites
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Default expiration time for invite links (in hours)
TELEGRAM_INVITE_EXPIRY_HOURS=24

# ========================================
# Development Configuration (Optional)
# ========================================
# Environment mode
NODE_ENV=development
# Enable debug mode for development
NEXT_PUBLIC_DEBUG=true

# ========================================
# Notes
# ========================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Variables without NEXT_PUBLIC_ are only available server-side
# - All required variables must be set for the application to function
# - Optional variables can be left unset or empty
